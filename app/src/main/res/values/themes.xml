<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.AlShafiMedLedger" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="dialogCornerRadius">@color/cardBackgroundColor</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- Error color. -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AlShafiMedLedger" parent="Base.Theme.AlShafiMedLedger" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.AlShafiMedLedger</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
    </style>


    <!-- Custom style for the rounded outlined TextInputLayout -->
    <style name="CustomOutlinedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@drawable/custom_box_stroke</item>
        <item name="boxCornerRadiusTopStart">18dp</item>
        <item name="boxCornerRadiusTopEnd">18dp</item>
        <item name="boxCornerRadiusBottomEnd">18dp</item>
        <item name="boxCornerRadiusBottomStart">18dp</item>
    </style>

    <!-- Custom style for the TextInputEditText -->
    <style name="CustomTextInputEditText">
        <item name="android:backgroundTint">@color/colorPrimary</item> <!-- Transparent background -->
    </style>


    <style name="CardView.RoundedBottomCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_16sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_16sdp</item>
    </style>


    <style name="RoundedCornerImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_25sdp</item>
    </style>

    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorAccent</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <!-- Full-screen dialog style -->
    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Make the dialog fill the screen -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>